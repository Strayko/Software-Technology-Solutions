@model Blog;

@{
    Layout = "_LayoutAdmin";
    ViewBag.Title = "Create";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper" xmlns="http://www.w3.org/1999/html">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <div class="card card-secondary">
                        <div class="card-header">
                            <h3 class="card-title">Create</h3>
                        </div>

                        <form asp-action="Create" method="post" role="form" id="quickForm">
                            <!-- /.card-header -->
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-sm-12">

                                        <div class="form-group">
                                            <label asp-for="Name">Name</label>
                                            <input asp-for="Name" type="text" class="form-control">
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="ShortDescription">Short Description</label>
                                            <input asp-for="ShortDescription" type="text" class="form-control">
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="LongDescription">Long Description</label>
                                            <input asp-for="LongDescription" type="text" class="form-control">
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="ImageUrl">Image Url</label>
                                            <input asp-for="ImageUrl" type="text" class="form-control">
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="ImageThumbnailUrl">Image Thumbnail Url</label>
                                            <input asp-for="ImageThumbnailUrl" type="text" class="form-control">
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="CategoryId">Category Id</label>
                                            <input asp-for="CategoryId" type="number" class="form-control">
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="Notes">Notes</label>
                                            <input asp-for="Notes" type="text" class="form-control">
                                        </div>

                                    </div>
                                </div>
                            </div>
                            <div class="card-footer d-flex justify-content-end">
                                <button class="btn btn-primary">Submit</button>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
</div>

@section Scripts
{
    <script src="{{asset('js/admin/jquery.validate.min.js')}}"></script>
    <script src="{{asset('js/admin/additional-methods.min.js')}}"></script>
    <script>
        $(document).ready(function () {
            $('#quickForm').validate({
                rules: {
                    email: {
                        required: true,
                        email: true,
                    },
                    name: {
                        required: true,
                    },
                    address: {
                        required: true,
                    },
                    phone: {
                        required: true,
                    },
                },
                messages: {
                    email: {
                        required: "Please enter a email address",
                        email: "Please enter a vaild email address"
                    },
                    name: {
                        required: "Field is required",
                    },
                    address: {
                        required: "Field is required",
                    },
                    phone: {
                        required: "Field is required",
                    },
                },
                errorElement: 'span',
                errorPlacement: function (error, element) {
                    error.addClass('invalid-feedback');
                    element.closest('.form-group').append(error);
                },
                highlight: function (element, errorClass, validClass) {
                    $(element).addClass('is-invalid');
                },
                unhighlight: function (element, errorClass, validClass) {
                    $(element).removeClass('is-invalid');
                }
            });
        });
    </script>
}